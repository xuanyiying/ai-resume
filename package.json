{
  "name": "resume-optimizer-mvp",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered resume optimization SaaS platform",
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' concurrently -n backend,frontend -c blue,green \"pnpm --filter=@resume-optimizer/backend start:dev\" \"pnpm --filter=@resume-optimizer/frontend start:dev\"",
    "dev:backend": "NODE_OPTIONS='--max-old-space-size=2048' pnpm --filter=@resume-optimizer/backend start:dev",
    "dev:frontend": "NODE_OPTIONS='--max-old-space-size=2048' pnpm --filter=@resume-optimizer/frontend start:dev",
    "dev:turbo": "turbo run dev --no-cache --concurrency=2",
    "build": "turbo run build",
    "build:backend": "pnpm --filter=@resume-optimizer/backend build",
    "build:frontend": "pnpm --filter=@resume-optimizer/frontend build",
    "test": "turbo run test",
    "test:parallel": "pnpm run test --recursive --parallel",
    "lint": "turbo run lint",
    "lint:fix": "pnpm run lint --recursive --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "deploy": "bash scripts/deploy.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.6.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}